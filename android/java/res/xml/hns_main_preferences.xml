<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:orderingFromXml="false">
    <PreferenceCategory
        android:key="features_section"
        android:order="1"
        android:title="@string/prefs_section_features"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.privacy.HnsPrivacySettings"
        android:key="hns_shields_and_privacy"
        android:icon="@drawable/ic_hns"
        android:order="1"
        android:title="@string/hns_shields_and_privacy"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsNewsPreferencesV2"
        android:key="hns_news_v2"
        android:icon="@drawable/ic_news"
        android:order="2"
        android:title="@string/hns_news_title"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsWalletPreferences"
        android:key="hns_wallet"
        android:icon="@drawable/ic_crypto_wallets"
        android:order="3"
        android:title="@string/hns_ui_hns_wallet"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsVpnPreferences"
        android:key="hns_vpn"
        android:icon="@drawable/ic_vpn"
        android:order="4"
        android:title="@string/hns_firewall_vpn"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.playlist.settings.HnsPlaylistPreferences"
        android:key="hns_playlist"
        android:icon="@drawable/ic_open_playlist"
        android:order="4"
        android:title="@string/hns_playlist"/>
    <PreferenceCategory
        android:key="general_section"
        android:order="5"
        android:title="@string/prefs_section_general"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsSearchEnginesPreferences"
        android:key="hns_search_engines"
        android:order="6"
        android:icon="@drawable/ic_search_vector"
        android:title="@string/hns_search_engines"/>

    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsSearchEnginesPreferences"
        android:key="home_screen_widget"
        android:order="7"
        android:icon="@drawable/ic_home_screen_widget"
        android:title="@string/home_screen_widget"/>

    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsStatsPreferences"
        android:key="hns_stats"
        android:order="9"
        android:icon="@drawable/ic_privacy_reports"
        android:title="@string/hns_stats"/>
    <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
        android:key="closing_all_tabs_closes_hns"
        android:order="13"
        android:defaultValue="false"
        android:icon="@drawable/ic_closing_all_closes_hns"
        android:title="@string/prefs_closing_all_tabs_closes_hns"/>
    <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
        android:key="background_video_playback"
        android:order="14"
        android:defaultValue="false"
        android:icon="@drawable/ic_bg_video_playback"
        android:title="@string/prefs_background_video_playback"/>
    <PreferenceCategory
        android:key="display_section"
        android:order="15"
        android:title="@string/prefs_section_display"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.AppearancePreferences"
        android:key="appearance"
        android:order="16"
        android:icon="@drawable/ic_appearance"
        android:title="@string/prefs_appearance"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.BackgroundImagesPreferences"
        android:key="background_images"
        android:order="17"
        android:icon="@drawable/ic_new_tab_page"
        android:title="@string/prefs_new_tab_page"/>
    <PreferenceCategory
        android:key="online_checkout_section"
        android:order="21"
        android:title="@string/prefs_section_online_checkout"/>
    <PreferenceCategory
        android:key="support_section"
        android:order="24"
        android:title="@string/prefs_support_section"/>

    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsSyncScreensPreference"
        android:key="hns_sync_layout"
        android:order="22"
        android:icon="@drawable/ic_sync"
        android:title="@string/sync_category_title"/>
    <Preference
        android:key="rate_hns"
        android:order="28"
        android:icon="@drawable/ic_rate"
        android:title="@string/prefs_rate_hns"/>
    <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
        android:key="use_custom_tabs"
        android:order="20"
        android:icon="@drawable/ic_custom_tabs"
        android:title="@string/prefs_use_custom_tabs_title"
        android:summary="@string/prefs_use_custom_tabs_text"/>
    <!-- <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.settings.HnsCustomTabsPreference"
        android:key="use_custom_tabs"
        android:order="20"
        android:icon="@drawable/ic_custom_tabs"
        android:title="@string/prefs_use_custom_tabs_title"
        android:summary="@string/prefs_use_custom_tabs_text"/> -->
    <Preference
        android:fragment="org.chromium.chrome.browser.language.settings.HnsLanguageSettings"
        android:key="hns_languages"
        android:order="23"
        icon="@drawable/ic_languages"
        android:title="@string/language_settings"/>
    <org.chromium.components.browser_ui.settings.ChromeBasePreference
        android:fragment="org.chromium.chrome.browser.download.settings.HnsDownloadSettings"
        android:key="hns_downloads"
        android:order="24"
        android:icon="@drawable/ic_downloads"
        android:title="@string/menu_downloads"/>
    <PreferenceCategory
        android:key="about_section"
        android:order="24"
        android:title="@string/prefs_about_section"/>
</PreferenceScreen>
