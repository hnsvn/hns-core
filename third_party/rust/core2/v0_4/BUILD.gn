import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "core2"
  epoch = "0.4"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//hns/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//hns/third_party/rust/core2/v0_4/crate/src/error.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/io/buffered.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/io/cursor.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/io/error.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/io/impls.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/io/mod.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/io/traits.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/io/util.rs",
    "//hns/third_party/rust/core2/v0_4/crate/src/lib.rs",
    "//hns/third_party/rust/core2/v0_4/crate/tests/tests.rs",
  ]
  inputs = [ "//hns/third_party/rust/core2/v0_4/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.4.0"
  cargo_pkg_authors = "Brendan Molloy <brendan@bbqsrc.net>"
  cargo_pkg_name = "core2"
  cargo_pkg_description = "The bare essentials of std::io for use in no_std. Alloc support is optional."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//third_party/rust/memchr/v2:lib" ]
  features = [ "alloc" ]
}
