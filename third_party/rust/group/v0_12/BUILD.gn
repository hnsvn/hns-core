import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "group"
  epoch = "0.12"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//hns/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//hns/third_party/rust/group/v0_12/crate/src/cofactor.rs",
    "//hns/third_party/rust/group/v0_12/crate/src/lib.rs",
    "//hns/third_party/rust/group/v0_12/crate/src/prime.rs",
    "//hns/third_party/rust/group/v0_12/crate/src/tests/mod.rs",
    "//hns/third_party/rust/group/v0_12/crate/src/wnaf.rs",
  ]
  inputs = [
    "//hns/third_party/rust/group/v0_12/crate/CHANGELOG.md",
    "//hns/third_party/rust/group/v0_12/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2021"
  cargo_pkg_version = "0.12.1"
  cargo_pkg_authors =
      "Sean Bowe <ewillbefull@gmail.com>, Jack Grigg <jack@z.cash>"
  cargo_pkg_name = "group"
  cargo_pkg_description = "Elliptic curve group traits and utilities"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//hns/third_party/rust/ff/v0_12:lib",
    "//hns/third_party/rust/subtle/v2:lib",
    "//third_party/rust/rand_core/v0_6:lib",
  ]
  features = [ "alloc" ]
}
