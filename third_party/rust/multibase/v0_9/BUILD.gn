import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "multibase"
  epoch = "0.9"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//hns/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//hns/third_party/rust/multibase/v0_9/crate/benches/multibase.rs",
    "//hns/third_party/rust/multibase/v0_9/crate/src/base.rs",
    "//hns/third_party/rust/multibase/v0_9/crate/src/encoding.rs",
    "//hns/third_party/rust/multibase/v0_9/crate/src/error.rs",
    "//hns/third_party/rust/multibase/v0_9/crate/src/impls.rs",
    "//hns/third_party/rust/multibase/v0_9/crate/src/lib.rs",
    "//hns/third_party/rust/multibase/v0_9/crate/tests/lib.rs",
  ]
  inputs = [ "//hns/third_party/rust/multibase/v0_9/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.9.1"
  cargo_pkg_authors = "Friedel Ziegelmayer <dignifiedquire@gmail.com>"
  cargo_pkg_name = "multibase"
  cargo_pkg_description = "multibase in rust"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//hns/third_party/rust/base_x/v0_2:lib",
    "//hns/third_party/rust/data_encoding/v2:lib",
    "//hns/third_party/rust/data_encoding_macro/v0_1:lib",
  ]
  features = [ "std" ]
}
