import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "unicode_bidi"
  epoch = "0.3"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//hns/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/char_data/mod.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/char_data/tables.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/data_source.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/deprecated.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/explicit.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/format_chars.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/implicit.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/level.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/lib.rs",
    "//hns/third_party/rust/unicode_bidi/v0_3/crate/src/prepare.rs",
  ]
  inputs = [ "//hns/third_party/rust/unicode_bidi/v0_3/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.3.13"
  cargo_pkg_authors = "The Servo Project Developers"
  cargo_pkg_name = "unicode-bidi"
  cargo_pkg_description =
      "Implementation of the Unicode Bidirectional Algorithm"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  features = [
    "hardcoded-data",
    "std",
  ]
}
