import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "tinyvec"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//hns/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//hns/third_party/rust/tinyvec/v1/crate/benches/macros.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/benches/smallvec.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src-backup/arrayset.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/array.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/array/const_generic_impl.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/array/generated_impl.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/arrayvec.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/arrayvec_drain.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/lib.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/slicevec.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/src/tinyvec.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/tests/arrayvec.rs",
    "//hns/third_party/rust/tinyvec/v1/crate/tests/tinyvec.rs",
  ]
  inputs = [
    "//hns/third_party/rust/tinyvec/v1/crate/CHANGELOG.md",
    "//hns/third_party/rust/tinyvec/v1/crate/LICENSE-APACHE.md",
    "//hns/third_party/rust/tinyvec/v1/crate/LICENSE-MIT.md",
    "//hns/third_party/rust/tinyvec/v1/crate/LICENSE-ZLIB.md",
    "//hns/third_party/rust/tinyvec/v1/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "1.6.0"
  cargo_pkg_authors = "Lokathor <zefria@gmail.com>"
  cargo_pkg_name = "tinyvec"
  cargo_pkg_description =
      "`tinyvec` provides 100% safe vec-like data structures."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//hns/third_party/rust/tinyvec_macros/v0_1:lib" ]
  features = [
    "alloc",
    "tinyvec_macros",
  ]
}
